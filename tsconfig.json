{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react-jsx",
    "jsxImportSource": "jsxte",
    "declaration": false,
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infrastructure/*"],
      "@app/*": ["application/*"],
      "@domain/*": ["domain/*"]
    },
    "typeRoots": ["src/infrastructure/@types", "./node_modules/@types"],
    "types": ["node", "jest"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./app",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "app", "src/**/*.js", "src/**/*.jsx"]
}
